# ============================================================================
# TRADING BOT ENVIRONMENT CONFIGURATION
# ============================================================================
# Copy this file to .env and fill in your actual values

# ============================================================================
# API CREDENTIALS
# ============================================================================
API_KEY=your_api_key_here
API_SECRET=your_api_secret_here
ACCESS_TOKEN=your_access_token_here
ACCESS_TOKEN_DATE=2024-01-01

# ============================================================================
# RISK MANAGEMENT SETTINGS
# ============================================================================
LOT_SIZE=75
RISK_RUPEES=500
REWARD_RUPEES=1000
TRAIL_RUPEES=250

# RISK_MODE: PER_LOT or ABSOLUTE
RISK_MODE=PER_LOT

# FIRST_TARGET_SL_MODE: BUY or MIDPOINT  
FIRST_TARGET_SL_MODE=MIDPOINT

# ============================================================================
# ORDER MANAGEMENT SETTINGS
# ============================================================================
PRODUCT=MIS
ORDER_BUFFER=0.05
MAX_MODIFY_BEFORE_RECREATE=20
THROTTLE_SECONDS=2.0
MIN_SL_STEP=0.1

# ============================================================================
# SYSTEM SETTINGS
# ============================================================================
STATE_FILE=state.json

# ============================================================================
# NGROK SETTINGS (Optional - for quick testing)
# ============================================================================
# Set to true to automatically create ngrok tunnel for local testing
USE_NGROK=false

# Optional: Set your ngrok auth token for better stability and custom domains
# Get free auth token from: https://dashboard.ngrok.com/get-started/your-authtoken
NGROK_AUTH_TOKEN=your_ngrok_auth_token_here